{
  "name": "yourname/laravel-acl",
  "description": "Gestion des r√¥les et permissions pour Laravel 11/12 avec interface d'administration",
  "keywords": [
    "laravel", "roles", "permissions", "acl",
    "authorization", "admin", "ui"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Mecene Phrygien",
      "email": "you@example.com",
      "homepage": "https://github.com/mecenephrygien"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support":  "^11.0|^12.0",
    "illuminate/database": "^11.0|^12.0",
    "illuminate/auth":     "^11.0|^12.0",
    "illuminate/cache":    "^11.0|^12.0",
    "illuminate/routing":  "^11.0|^12.0",
    "illuminate/view":     "^11.0|^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^9.0|^10.0",
    "phpunit/phpunit":     "^11.0"
  },
  "autoload": {
    "psr-4": {
      "YourName\\LaravelAcl\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "YourName\\LaravelAcl\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "YourName\\LaravelAcl\\AclServiceProvider"
      ],
      "aliases": {
        "Acl": "YourName\\LaravelAcl\\Facades\\Acl"
      }
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}